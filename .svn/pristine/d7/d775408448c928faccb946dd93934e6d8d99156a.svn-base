// page: 账号绑定
@charset "utf-8";
@import "../variable";
@import '../icon';

.content {
    padding: 0 $padding_left_right;

    &:before {
        content: "";
        display: table;
    }

    p {
        font-size: 14px;
        color: #909399;
        margin-top: 30px;
    }

}

.item {
    font-size: 14px;
    margin-top: 30px;
    padding-left: 70px;

    .btn {
        float: right;
        color: $color_main;
        display: inline-block;
        width: 70px;
        height: 26px;
        line-height: 24px;
        color: $color_main;
        text-align: center;
        background: #fff;
        border: 1px solid $color_main;
        border-radius: 18px;
        cursor: pointer;

        &.unbingding {
            color: $color_disabled;
            border-color: $color_disabled;

            &:hover {
                background: none;
                color: $color_disabled;
            }
        }

        &:hover {
            background: $color_main;
            color: #fff;
        }
    }

    >i {
        margin-right: 10px;
        @extend %middle;
    }

    >span {
        color: #333;
        @extend %middle;
    }
}


.modify_mobile {
    padding-bottom: 16px;

    .text {
        line-height: 28px;
        font-size: 14px;
        color: #333;
        margin: 6px 0 10px;
    }

    .img_capcha {
        img {
            width: 100%;
            height: 40px;
            cursor: pointer;
        }
    }
}


